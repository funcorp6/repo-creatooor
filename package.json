{
  "name": "repo-creatooor",
  "version": "1.0.0",
  "private": true,
  "description": "Creates pre-configured github repositories",
  "license": "MIT",
  "author": "Wonderland",
  "main": "index.js",
  "scripts": {
    "create-repo": "ts-node src/create-repo.ts && tsc",
    "lint:check": "prettier --check .",
    "lint:fix": "sort-package-json && prettier --write .",
    "prepare": "husky install",
    "repo-doctor": "ts-node src/repo-doctor.ts && tsc"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{md,ts,yml}": "prettier --write",
    "package.json": "sort-package-json"
  },
  "dependencies": {
    "axios": "1.11.0",
    "dotenv": "17.2.1",
    "jsonwebtoken": "9.0.2",
    "lint-staged": "16.1.5",
    "yaml": "2.8.1"
  },
  "devDependencies": {
    "@commitlint/cli": "19.8.1",
    "@commitlint/config-conventional": "19.8.1",
    "@types/chai": "5.2.2",
    "@types/jsonwebtoken": "9.0.10",
    "@types/mocha": "10.0.10",
    "@types/node": "24.3.0",
    "chai": "5.3.1",
    "husky": "9.1.7",
    "mocha": "11.7.1",
    "prettier": "3.6.2",
    "sort-package-json": "3.4.0",
    "ts-mocha": "11.1.0",
    "ts-node": "10.9.2",
    "typescript": "5.9.2"
  }
}
